[MESSAGES CONTROL]
# MODERATE configuration for PRESENTATION layer
# Allows UI-specific patterns while maintaining quality
disable=
    # Code structure - reasonable for domain models  
    too-few-public-methods,
    too-many-public-methods,
    too-many-instance-attributes,
    
    # Abstract base classes - pass statements are required
    unnecessary-pass,
    
    # Import organization - handled by isort
    wrong-import-order,
    ungrouped-imports,
    import-outside-toplevel,
    
    # Line length - handled by black
    line-too-long,
    
    # Architectural issues
    no-member,
    
    # Domain entities need many fields
    too-many-positional-arguments,
    duplicate-code,
    raise-missing-from,
    
    # UI-specific patterns that are acceptable in presentation layer
    broad-exception-caught,  # UI needs to catch all exceptions gracefully
    logging-fstring-interpolation,  # Performance less critical in UI
    consider-using-join,  # String readability preference in UI
    redefined-outer-name,  # Common in UI callback patterns
    reimported,  # Import reuse patterns in UI adapters
    method-hidden,  # Common in view model patterns with dataclasses
    protected-access,  # Common in adapter patterns
    consider-iterating-dictionary,  # UI iteration patterns
    
    # Development patterns acceptable in UI
    fixme  # TODO comments for UI enhancements

[FORMAT]
max-line-length=88

[DESIGN]
# More lenient for UI complexity
max-args=12  # UI methods often need many parameters
max-locals=20
max-returns=8
max-branches=15
max-statements=60
max-positional-arguments=8

[BASIC]
good-names=["i", "j", "k", "ex", "Run", "_", "id", "ui", "st"]
